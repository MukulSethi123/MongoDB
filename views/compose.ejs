<%- include("partials/header") %>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label class="form-label">Title</label>
            <input class="form-control" type="text" name="post_title" autocomplete="off">
        </div>
        <div class="form-group">
            <label class="form-label">Body</label>
            <textarea class="form-control" type="text" name="post_message" rows="5"></textarea>
        </div>
        <button class="btn btn-custom btn-lg" type="submit">Publish</button>
    </form>
    <%- include("partials/footer") %>